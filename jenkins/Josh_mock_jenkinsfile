// *******************************
stage 'Upgrade'
// *******************************

echo "Upgrading the OpenStack deployment from ${from_release} to ${to_release}"
node('onmetal-provisioner') {
    
    // Add Josh's API uptime here
      //Steve H. Will handle this part

    // Getting IP for During Test
    def my_ip
    dir('/home/ubuntu/workspace/onMetal_Sandbox') {
        my_ip = osa.get_onmetal_ip()
    }
    
    //Pull during test from repo and create dir during-upgrade-tests
    dir('during-upgrade-tests') {
        git 'https://github.com/lamarwhitej/test_rolling_upgrades_during'

    //Transfer During test and install requirements
    osa.setup_during_test(my_ip)
    }
    
    //Start During Tests
    osa.start_during_test(my_ip)
    
